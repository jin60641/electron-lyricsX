{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,       // .d.ts 파일 생성
    "declarationMap": true,    // 소스 맵 생성
    "outDir": "./dist/esm",        // 빌드 결과물 위치
    "strict": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": ["./src"]
}
